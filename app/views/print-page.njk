{% extends "_layout.njk" %}

{% from "components/list.njk" import filterList %}

{% block pageTitle %}
Print - {{ serviceTitle }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-three-quarters">
        <h1 class="govuk-heading-xl">Check what SFI actions you can get paid to do on your land</h1>

        <div class="govuk-body">
          <a class="govuk-!-display-none-print govuk-link govuk-!-display-none" href="javascript:window.print();" id="printButton">Print this page</a>
        </div>

        {% include 'components/eligibility-warning.njk' %}
      </div>
      <div class="govuk-grid-column-one-quarter govuk-!-text-align-right"></div>
    </div>

    <div class="govuk-grid-row">
      {{ filterList(sfiActions, true) }}
    </div>
  </div>
{% endblock %}
